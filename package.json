{
	"name": "client",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "yarn build:WebSocketHandler && vite build",
		"build:WebSocketHandler": "esbuild src/lib/server/WebSocketHandler.ts --bundle --tsconfig=tsconfig.json --outfile=dist/WebSocketHandler.js --platform=node --format=esm",
		"start": "node ./server",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "yarn format && prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.20.4",
		"@testing-library/svelte": "^4.0.3",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/coverage-v8": "^0.34.6",
		"autoprefixer": "^10.4.16",
		"daisyui": "^3.8.3",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"jest-dom": "^4.0.0",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.34.6",
		"vitest-dom": "^0.1.1"
	},
	"type": "module",
	"dependencies": {
		"@types/express": "^4.17.18",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"firebase": "^10.5.0",
		"iconify-icon": "^1.0.8"
	}
}
